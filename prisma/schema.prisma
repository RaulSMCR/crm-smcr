generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- ENUMS ---

enum Role {
  USER
  ADMIN
  PROFESSIONAL
}

enum PostType {
  ARTICLE
  VIDEO
  AUDIO
  TEXT
}

enum PostStatus {
  DRAFT
  PENDING
  PUBLISHED
  ARCHIVED
}

// --- MODELOS ---

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  passwordHash   String
   
  // Perfilamiento
  gender         String?
  interests      String?
  phone          String?
  identification String?
  birthDate      DateTime?
  timeZone       String?   @default("UTC")
   
  // Auth & Verificación
  role                 Role      @default(USER)
  emailVerified        Boolean   @default(false)
   
  // Tokens de Verificación de Email
  verifyTokenHash        String?
  verifyTokenExp         DateTime?
  verifyEmailLastSentAt  DateTime?

  // Tokens de Recuperación de Contraseña
  resetTokenHash         String?
  resetTokenExp          DateTime?
  resetLastSentAt        DateTime?

  // Timestamps
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
   
  // Relaciones
  appointments           Appointment[]

  // Relaciones de Administración
  approvedProfessionals  Professional[] @relation("AdminApprovesPro")
  approvedPosts          Post[]         @relation("AdminApprovesPost")
}

// --- NUEVO MODELO: CATEGORÍAS (Jerárquico) ---
model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  
  // Jerarquía (Padre/Hijo)
  parentId    String?
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")

  // Relación con Profesionales (N:M)
  professionals Professional[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Professional {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  
  // --- CAMBIO PRINCIPAL: Renombrado de 'profession' ---
  declaredJobTitle String   // Antes era 'profession'
  
  passwordHash    String?   
   
  // --- CAMPOS REGISTRO COMPLETO ---
  phone           String?
  avatarUrl       String?
  resumeUrl       String?   
  bio             String?   @db.Text
  introVideoUrl   String?
  calendarUrl     String?
  paymentLinkBase String?

  // --- NUEVO: Relación con Categorías y Notas Admin ---
  categories      Category[]
  adminNotes      String?   @db.Text

  // --- AUTH & VERIFICACIÓN PROFESIONAL ---
  isApproved            Boolean   @default(false)
  emailVerified         Boolean   @default(false)
   
  // Tokens de Verificación
  verifyTokenHash        String?
  verifyTokenExp         DateTime?
  verifyEmailLastSentAt  DateTime?
   
  // Tokens de Recuperación
  resetTokenHash         String?
  resetTokenExp          DateTime?
  resetLastSentAt        DateTime?

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relaciones
  services        Service[]
  posts           Post[]
  appointments    Appointment[]
   
  // --- RELACIÓN: DISPONIBILIDAD ---
  availabilities  Availability[]
   
  // Relación con Admin (Aprobación)
  approvedById    String?
  approvedBy      User?    @relation("AdminApprovesPro", fields: [approvedById], references: [id])
}

// --- MODELO: DISPONIBILIDAD ---
model Availability {
  id             String       @id @default(cuid())
  dayOfWeek      Int          // 0=Domingo, 1=Lunes, ..., 6=Sábado
  startTime      String       // Formato "HH:mm" (ej: "09:00")
  endTime        String       // Formato "HH:mm" (ej: "17:00")
  isActive       Boolean      @default(true)
   
  professionalId String
  professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)

  @@index([professionalId])
}

model Service {
  id             String   @id @default(cuid())
  slug           String   @unique
  title          String
  description    String   @db.Text
  price          Decimal  @default(0.0)
  imageUrl       String?
   
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relaciones
  professionals  Professional[]
  posts          Post[]
  appointments   Appointment[] 
}

model Post {
  id             String     @id @default(cuid())
  slug           String     @unique
  title          String
  content        String     @db.Text
  excerpt        String?    @db.Text
  imageUrl       String?
   
  postType       PostType   @default(ARTICLE)
  mediaUrl       String?    
   
  status         PostStatus @default(PENDING)
   
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  // Relaciones
  authorId       String?
  author         Professional? @relation(fields: [authorId], references: [id])
   
  serviceId      String?
  service        Service?      @relation(fields: [serviceId], references: [id])

  // Aprobación Admin
  approvedById   String?
  approvedBy     User?         @relation("AdminApprovesPost", fields: [approvedById], references: [id])
}

model Appointment {
  id             String       @id @default(cuid())
  date           DateTime
  status         String       @default("PENDING") 
   
  userId         String
  user           User         @relation(fields: [userId], references: [id])
   
  professionalId String
  professional   Professional @relation(fields: [professionalId], references: [id])

  // Relación con Servicio
  serviceId      String?
  service        Service?     @relation(fields: [serviceId], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}