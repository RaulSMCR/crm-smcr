// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // O "mysql" si usas PlanetScale, pero para Vercel/Neon suele ser postgresql
  url      = env("DATABASE_URL")
}

// --- ENUMS ---

enum Role {
  USER
  ADMIN
  PROFESSIONAL
}

enum PostType {
  ARTICLE
  VIDEO
  AUDIO
  TEXT
}

enum PostStatus {
  DRAFT
  PENDING
  PUBLISHED
  ARCHIVED
}

// --- MODELOS ---

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  passwordHash  String
  
  // Perfilamiento
  gender        String?
  interests     String?   // Podría ser JSON si usas Postgres, pero String está bien por ahora
  phone         String?
  identification String?
  birthDate     DateTime?
  timeZone      String?   @default("UTC")
  
  // Auth & Verificación (LOS CAMPOS QUE FALTABAN)
  role                  Role      @default(USER)
  emailVerified         Boolean   @default(false)
  verifyTokenHash       String?
  verifyTokenExp        DateTime?
  verifyEmailLastSentAt DateTime?

  // Relaciones
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  appointments          Appointment[]

  // Relaciones de Administración (Si el usuario es ADMIN)
  approvedProfessionals Professional[] @relation("AdminApprovesPro")
  approvedPosts         Post[]         @relation("AdminApprovesPost")
}

model Professional {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  profession    String
  introVideoUrl String?
  passwordHash  String?  // Opcional si se registran distinto, pero útil si tienen login
  isApproved    Boolean  @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  services      Service[]
  posts         Post[]
  appointments  Appointment[]
  
  // Relación con quien lo aprobó (Admin)
  approvedById  String?
  approvedBy    User?    @relation("AdminApprovesPro", fields: [approvedById], references: [id])
}

model Service {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  description   String   @db.Text
  price         Decimal  @default(0.0)
  imageUrl      String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  professionals Professional[]
  posts         Post[]
}

model Post {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  content     String     @db.Text
  imageUrl    String?
  
  // Multimedia específica
  postType    PostType   @default(ARTICLE)
  mediaUrl    String?    // Para YouTube (Video) o Spotify (Audio)
  
  status      PostStatus @default(PENDING)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relaciones
  authorId    String?
  author      Professional? @relation(fields: [authorId], references: [id])
  
  serviceId   String?
  service     Service?      @relation(fields: [serviceId], references: [id])

  // Aprobación
  approvedById String?
  approvedBy   User?        @relation("AdminApprovesPost", fields: [approvedById], references: [id])
}

model Appointment {
  id             String   @id @default(cuid())
  date           DateTime
  status         String   @default("PENDING") // PENDING, CONFIRMED, CANCELLED
  
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  
  professionalId String
  professional   Professional @relation(fields: [professionalId], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}