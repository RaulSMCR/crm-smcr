// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // recomendado
}

enum Role {
  USER
  PROFESSIONAL
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED_BY_USER
  CANCELLED_BY_PRO
  COMPLETED
  NO_SHOW
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUNDED
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// --------------------------------------------------------
// USERS
// --------------------------------------------------------

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  passwordHash  String
  image         String?
  phone         String
  role          Role     @default(USER)

  identification String? @db.VarChar(32)

  // ✅ NUEVOS (para que el panel paciente no rompa)
  birthDate DateTime?
  gender    String? @db.VarChar(16)
  interests String? @db.Text

  emailVerified Boolean  @default(false)
  isActive      Boolean  @default(true)
  lastLogin     DateTime?

  acquisitionChannel String?
  campaignName       String?

  verifyTokenHash String?
  verifyTokenExp  DateTime?
  resetTokenHash  String?
  resetTokenExp   DateTime?

  professionalProfile ProfessionalProfile?
  appointments        Appointment[] @relation("PatientAppointments")
  postViewEvents      PostViewEvent[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([identification])
}


// --------------------------------------------------------
// PROFESSIONAL PROFILE
// --------------------------------------------------------

model ProfessionalProfile {
  id            String @id @default(cuid())

  userId        String @unique
  user          User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  slug          String @unique
  specialty     String
  licenseNumber String?
  bio           String? @db.Text
  coverLetter   String? @db.Text
  cvUrl         String?
  introVideoUrl String?

  avatarUrl          String?
  calendarUrl        String?
  googleRefreshToken String? @db.Text
  paymentLinkBase    String?

  isApproved     Boolean @default(false)

  rating        Decimal? @db.Decimal(2, 1)
  commission    Int      @default(10)

  services      Service[]
  availability  Availability[]
  posts         Post[]
  appointments  Appointment[] @relation("ProAppointments")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --------------------------------------------------------
// BLOG
// --------------------------------------------------------

model Category {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String?

  posts       Post[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String     @db.Text
  excerpt     String?    @db.Text
  coverImage  String?
  status      PostStatus @default(DRAFT)

  views       Int        @default(0)
  readingTime Int?

  metaTitle   String?
  metaDesc    String?

  authorId    String
  author      ProfessionalProfile @relation(fields: [authorId], references: [id])

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  // BLOG ANALYTICS (nivel 3)
  viewEvents  PostViewEvent[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([views])
}

// Eventos de marketing/lectura por post (Nivel 3)
model PostViewEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  postId String
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  // opcional si el lector está logueado
  userId String?
  user   User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Identificador anónimo persistente (cookie 1 año)
  anonId String

  // Sesión (cookie corta, p.ej. 30 min sliding)
  sessionId String

  // Marketing/contexto
  landingUrl  String? @db.Text
  referrer    String? @db.Text
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmTerm     String?
  utmContent  String?

  userAgent String? @db.Text
  country   String?

  // Lectura real
  isRead            Boolean  @default(false)
  readAt            DateTime?
  timeOnPageSeconds Int?
  scrollDepth       Int?     // 0..100 (máximo)

  @@index([postId, createdAt])
  @@index([createdAt])
  @@index([anonId])
  @@index([utmSource, utmMedium, utmCampaign])

  @@unique([sessionId, postId]) // 1 view por post por sesión
}

// --------------------------------------------------------
// BUSINESS
// --------------------------------------------------------

model Service {
  id            String   @id @default(cuid())
  title         String
  description   String?  @db.Text
  price         Decimal  @db.Decimal(10, 2)
  durationMin   Int
  isActive      Boolean  @default(true)

  professionals ProfessionalProfile[]
  appointments  Appointment[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Availability {
  id             String @id @default(cuid())

  dayOfWeek      Int      // 0..6
  startTime      String   // "HH:mm"
  endTime        String   // "HH:mm"

  professionalId String
  professional   ProfessionalProfile @relation(fields: [professionalId], references: [id], onDelete: Cascade)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([professionalId, dayOfWeek])
  @@unique([professionalId, dayOfWeek, startTime, endTime])
}

model Appointment {
  id             String            @id @default(cuid())
  date           DateTime
  endDate        DateTime
  status         AppointmentStatus @default(PENDING)

  pricePaid      Decimal?          @db.Decimal(10, 2)
  paymentStatus  PaymentStatus     @default(UNPAID)
  commissionFee  Decimal?          @db.Decimal(10, 2)

  gcalEventId    String?
  meetLink       String?

  patientId      String
  patient        User               @relation("PatientAppointments", fields: [patientId], references: [id])

  professionalId String
  professional   ProfessionalProfile @relation("ProAppointments", fields: [professionalId], references: [id])

  serviceId      String?
  service        Service?           @relation(fields: [serviceId], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([date])
  @@index([patientId])
  @@index([professionalId])
}
