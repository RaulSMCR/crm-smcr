// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")  <-- Opcional, pero para el deploy en Vercel solo necesitamos DATABASE_URL funcionando.
}

// --------------------------------------------------------
// ENUMS
// --------------------------------------------------------

enum Role {
  USER
  PROFESSIONAL
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED_BY_USER
  CANCELLED_BY_PRO
  COMPLETED
  NO_SHOW
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUNDED
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// --------------------------------------------------------
// 1. USUARIOS & MARKETING (La Demanda)
// --------------------------------------------------------

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  image         String?
  phone         String?
  role          Role      @default(USER)
  
  // --- Estado ---
  isApproved    Boolean   @default(true) 
  emailVerified Boolean   @default(false)
  isActive      Boolean   @default(true)
  lastLogin     DateTime? 
  
  // --- INTELIGENCIA DE MARKETING ---
  // ¿De dónde vienen mis clientes?
  acquisitionChannel String?   // Ej: "Instagram", "Google"
  campaignName       String?   // Ej: "Verano2025"
  
  // --- Tokens ---
  verifyTokenHash    String?
  verifyTokenExp     DateTime?
  resetToken         String?
  resetTokenExp      DateTime?

  // --- Relaciones ---
  professionalProfile ProfessionalProfile?
  appointments        Appointment[]        @relation("PatientAppointments")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// --------------------------------------------------------
// 2. PERFIL PROFESIONAL (La Oferta)
// --------------------------------------------------------

model ProfessionalProfile {
  id            String    @id @default(cuid())
  
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  slug          String    @unique
  specialty     String
  licenseNumber String?   // <--- AGREGA ESTA LÍNEA (Puede ser opcional '?' o obligatorio)
  bio           String?   @db.Text
  coverLetter   String?   @db.Text
  cvUrl         String?
  introVideoUrl String?
  
  rating        Decimal?  @db.Decimal(2, 1) 
  commission    Int       @default(10)      
  
  services      Service[]
  availability  Availability[]
  posts         Post[]
  appointments  Appointment[] @relation("ProAppointments")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// --------------------------------------------------------
// 3. BLOG & ANALÍTICAS DE CONTENIDO (El Imán)
// --------------------------------------------------------

model Category {
  id          String   @id @default(cuid())
  name        String   @unique // Ej: "Ansiedad", "Nutrición"
  slug        String   @unique
  description String?
  
  posts       Post[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String     @db.Text
  excerpt     String?    @db.Text
  coverImage  String?
  status      PostStatus @default(DRAFT)
  
  // --- MÉTRICAS DE ÉXITO ---
  views       Int        @default(0) // Contador de visitas
  readingTime Int?       // Minutos estimados de lectura (Ej: 5)
  
  // SEO
  metaTitle   String?
  metaDesc    String?

  // Relaciones
  authorId    String
  author      ProfessionalProfile @relation(fields: [authorId], references: [id])
  
  categoryId  String?
  category    Category?           @relation(fields: [categoryId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([views]) // Índice para ordenar rápidamente los "Más Leídos"
}

// --------------------------------------------------------
// 4. NEGOCIO & CITAS
// --------------------------------------------------------

model Service {
  id            String    @id @default(cuid())
  title         String
  description   String?   @db.Text
  price         Decimal   @db.Decimal(10, 2)
  durationMin   Int       
  isActive      Boolean   @default(true)
  
  professionals ProfessionalProfile[] 
  appointments  Appointment[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Availability {
  id             String              @id @default(cuid())
  dayOfWeek      Int                 
  startTime      String              
  endTime        String              
  
  professionalId String
  professional   ProfessionalProfile @relation(fields: [professionalId], references: [id], onDelete: Cascade)

  @@index([professionalId, dayOfWeek]) 
}

model Appointment {
  id             String            @id @default(cuid())
  date           DateTime
  endDate        DateTime          
  status         AppointmentStatus @default(PENDING)
  
  pricePaid      Decimal?          @db.Decimal(10, 2) 
  paymentStatus  PaymentStatus     @default(UNPAID)
  commissionFee  Decimal?          @db.Decimal(10, 2) 
  
  gcalEventId    String?           
  meetLink       String?           

  patientId      String
  patient        User              @relation("PatientAppointments", fields: [patientId], references: [id])
  
  professionalId String
  professional   ProfessionalProfile @relation("ProAppointments", fields: [professionalId], references: [id])
  
  serviceId      String?
  service        Service?          @relation(fields: [serviceId], references: [id])

  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([date])          
  @@index([patientId])     
  @@index([professionalId])
}