// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Recomendado para Vercel/Supabase si lo configuras
}

// --- ENUMS ---

enum Role {
  USER
  ADMIN
  PROFESSIONAL
}

enum PostType {
  ARTICLE
  VIDEO
  AUDIO
  TEXT
}

enum PostStatus {
  DRAFT
  PENDING
  PUBLISHED
  ARCHIVED
}

// --- MODELOS ---

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  passwordHash  String
  
  // Perfilamiento
  gender        String?
  interests     String?
  phone         String?
  identification String?
  birthDate     DateTime?
  timeZone      String?   @default("UTC")
  
  // Auth & Verificación
  role                  Role      @default(USER)
  emailVerified         Boolean   @default(false)
  verifyTokenHash       String?
  verifyTokenExp        DateTime?
  verifyEmailLastSentAt DateTime?

  // Timestamps
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  // Relaciones
  appointments          Appointment[]

  // Relaciones de Administración
  approvedProfessionals Professional[] @relation("AdminApprovesPro")
  approvedPosts         Post[]         @relation("AdminApprovesPost")
}

model Professional {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  profession    String
  passwordHash  String?  
  
  // --- CAMPOS AGREGADOS PARA EL REGISTRO COMPLETO ---
  phone           String?
  avatarUrl       String?
  resumeUrl       String?   // Para el CV (PDF)
  bio             String?   @db.Text
  introVideoUrl   String?
  calendarUrl     String?
  paymentLinkBase String?

  // --- AUTH & VERIFICACIÓN PROFESIONAL ---
  isApproved            Boolean   @default(false)
  emailVerified         Boolean   @default(false)
  verifyTokenHash       String?
  verifyTokenExp        DateTime?
  verifyEmailLastSentAt DateTime?
  resetTokenHash        String?
  resetTokenExp         DateTime?
  resetLastSentAt       DateTime?

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  services      Service[]
  posts         Post[]
  appointments  Appointment[]
  
  // Relación con Admin (Aprobación)
  approvedById  String?
  approvedBy    User?    @relation("AdminApprovesPro", fields: [approvedById], references: [id])
}

model Service {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  description   String   @db.Text
  price         Decimal  @default(0.0)
  imageUrl      String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  professionals Professional[]
  posts         Post[]
}

model Post {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  content     String     @db.Text
  excerpt     String?    @db.Text // Agregado para SEO
  imageUrl    String?
  
  postType    PostType   @default(ARTICLE)
  mediaUrl    String?    
  
  status      PostStatus @default(PENDING)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relaciones
  authorId    String?
  author      Professional? @relation(fields: [authorId], references: [id])
  
  serviceId   String?
  service     Service?      @relation(fields: [serviceId], references: [id])

  // Aprobación Admin
  approvedById String?
  approvedBy   User?        @relation("AdminApprovesPost", fields: [approvedById], references: [id])
}

model Appointment {
  id             String   @id @default(cuid())
  date           DateTime
  status         String   @default("PENDING") 
  
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  
  professionalId String
  professional   Professional @relation(fields: [professionalId], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}